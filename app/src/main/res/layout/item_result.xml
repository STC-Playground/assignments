<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ln_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_remark">

        <TextView
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:layout_weight="1"
            android:id="@+id/tv_box"
            android:text="BOX0001"
            android:textSize="11sp"
            android:maxLines="2"
            android:textColor="@color/brandeis_blue"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:id="@+id/tv_part"
            android:text="QIUU-123454"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="11sp"
            android:textColor="@color/vermilion_red"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            android:id="@+id/tv_timestamp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="01/01/2024\n10:12:10"
            android:textColor="@color/silver"
            android:textSize="11sp"
            android:gravity="end" />

        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/baseline_more_vert_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text=""
        android:textSize="9sp"
        android:paddingStart="8dp"
        android:textColor="@color/vermilion_red"
        app:layout_constraintTop_toBottomOf="@id/ln_item"
        app:layout_constraintBottom_toTopOf="@id/divider_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/tv_remark"
        android:id="@+id/divider_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seasalt"
        android:layout_marginHorizontal="12dp" />




</androidx.constraintlayout.widget.ConstraintLayout>